    "base64url": "^3.0.1",
    "bn.js": "^4.11.8",
    "body-parser": "^1.18.3",
    "celebrate": "^9.0.2",
    "cors": "^2.8.5",
    "ethers": "^4.0.27",
    "express": "^4.16.4",
    "lodash.isequal": "^4.5.0",
    "lodash.throttle": "^4.1.1",
    "mongodb": "^3.1.10",
    "node-fetch": "^2.3.0",
